@{
  Layout ="_Layout";
}
@using Factory.Models
@model List<Factory.Models.Machine>;
<div class="container">
    <h3>Installed Machines</h3>
    @if (Model.Count == 0)
    {
      <p>You haven't installed any machines.</p>
    }
    <ul>
      @foreach(Machine machine in Model)
      {
        <li>
          @Html.ActionLink($"{machine.Model}", "Details", new { id = machine.MachineId})
        </li>
      }
    </ul>
    <p>@Html.ActionLink("Add a Machine", "Create", "Machines")</p>
</div>