@{
  Layout ="_Layout";
}
@using Factory.Models
@model List<Factory.Models.Engineer>;
<div class="container">
    <h3>Engineers</h3>
    @if (Model.Count == 0)
    {
      <p>You haven't hired any engineers, yet. Hire some engineers!</p>
    }
    <ul>
      @foreach(Engineer engineer in Model)
      {
        <li>
          @Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})
        </li>
      }
    </ul>
    <p>@Html.ActionLink("Add an Engineer", "Create", "Engineers")</p>
</div>